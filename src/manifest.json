{
  "manifest_version": 3,
  "name": "AI Explainer",
  "description": "Use AI to explain the content of any web page.",
  "version": "1.0.0",
  "icons": {
    "128": "icon-128.png",
    "34": "icon-34.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "background": {
    "service_worker": "background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.bundle.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage", "activeTab", "clipboardWrite"],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icon-128.png",
        "icon-34.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
